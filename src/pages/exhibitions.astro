<style>
  :global(article:first-of-type) {
    border-bottom: none;
  }
  #table {
    width: 100%;
    max-width: var(--width-table);
  }
  .border-b-thin {
    border-bottom: 1px solid rgba(0, 0, 0, 0.25);
  }
</style>
