---
import Layout from "$lib/layouts/Layout.astro";
import Logo from "$lib/components/Logo.astro";
---

<Layout dark={true} nav={false} title="404">
  <div class="page-block grid place-content-center">
    <div class="flex flex-col gap-8 items-center">
      <Logo dark={true} asset={true} />
      <h1 class="text-4xl font-bold">404</h1>
      <h3 class="text-sm">Unfortunately, the URL provided is invalid.</h3>
    </div>
  </div>
</Layout>

<style>
  .page-block {
    min-height: 50vh;
  }
</style>
