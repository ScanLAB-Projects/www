---
interface Props {
  title?: string;
  body: string[];
  link?: {
    label?: string;
    href?: string;
  };
  type?: "credits" | "list" | "standard" | "info" | "artwork"; // Added "artwork"
}
const { title, body, link, type = "standard" } = Astro.props;
---

<div class={`block ${type}`}>
  {title && <p class="bold">{title}</p>}
  <ul class="gap-0 font-light">
    {
      body.map((content, index) => (
        <li class={content === "SPACER" ? "spacer" : ""}>
          {content === "SPACER" ? "" : (
            <p class={index === 0 ? "primary-text" : "secondary-text"}>{content}</p>
          )}
        </li>
      ))
    }
  </ul>
  {
    link && (
      <a class="" href={link.href || link.label}>
        {link.label || link.href}
      </a>
    )
  }
  <slot />
</div>

<style>
  .block {
    width: 768px;
    max-width: 100%;
  }
  ul,
  li {
    padding: 0;
    margin: 0;
    list-style: none;
  }
  ul {
    margin-top: 1em;
    display: flex;
    flex-direction: column;
  }
  .list li {
    margin-left: 1em;
    padding-left: calc(var(--spacing-level-4) - 0.5em);
    list-style: disc;
  }
  .info ul {
    padding-left: var(--spacing-level-4);
    border-left: var(--spacing-level-9) solid var(--col-dark);
  }
  
  .spacer {
    height: 1.5em;
  }

  /* NEW: Artwork-specific styling */
  .artwork .primary-text {
    font-weight: 400; /* Lighter than the default */
  }

  .artwork .secondary-text {
    font-size: 0.85em;
    font-weight: 300;
    opacity: 0.9;
  }

  @media (min-width: 768px) {
    .info ul,
    .list ul {
      margin-left: 0.5em;
    }
  }
  @media (max-width: 768px) {
    .list ul,
    .info ul {
      margin-left: var(--spacing-level-4);
    }
    .list li {
      padding-left: 0;
    }
    .info ul {
      padding-left: 0.5em;
    }
  }
</style>