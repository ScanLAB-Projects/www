---
import Icon from "./Icon.astro";
interface Props {
  showing?: "PAST" | "NOW" | "SOON";
  active?: string;
  from?: string;
  to?: string;
  slug?: string;
  tickets?: string;
  title?: string;
  client?: string;
  venue?: string;
  location?: string;
  description?: string;
  cite?: string;
}
const {
  showing,
  active,
  to,
  from,
  cite,
  slug,
  tickets,
  title,
  client,
  venue,
  location,
  description,
} = Astro.props;
---

<article class="flex flex-col font-light max-w-3xl gap-6 w-[100%] px-8">
  <div class="flex flex-col sm:flex-row justify-between gap-4">
    <div class="flex flex-col justify-center">
      <h3 class="text-lg sm:text-2xl font-bold shrink-1">
        <a class="border-b-2" href={`/${slug}`}>{title}</a>
        <!-- <span class="border-b-2"></span> -->
      </h3>
      <h4>{client}</h4>
    </div>
    <div
      class="flex flex-col-reverse sm:flex-col w-[100%] sm:w-[30%] items-end gap-0 sm:gap-2"
    >
      <div
        class="flex sm:flex-col md:flex-row gap-4 sm:gap-0 md:gap-4 pt-2 sm:pt-0 w-[100%] justify-between items-end text-sm self-start sm:self-end"
      >
        <div class="flex gap-2 items-center">
          <Icon ctx="calendar" />
          <span class="text-xs md:text-sm">{from}</span>
        </div>
        <span class="text-xs md:text-sm">{to}</span>
      </div>
      <div class="text-xs
          md:text-sm
          text-right">
        {venue}
        <!-- {venue && venue.map((val) => <p>{val}</p>)} -->
      </div>
      <div class="text-xs
          md:text-sm
          text-right">
        {location}
      </div>
    </div>
  </div>
  <div class="flex flex-col gap-2">
    {description}
    <!-- {description && description.map((val) => <p>{val}</p>)} -->
    {cite && <p class="italic text-right">{cite}</p>}
  </div>

  {
    active && (
      <div class="flex items-center justify-between flex-col md:flex-row">
        <div class="flex items-center gap-4 rounded-md">
          <Icon ctx="credit-card" />
          <a href={tickets}>
            <strong>Book tickets</strong>
          </a>
        </div>
      </div>
    )
  }
  <!-- <a class="text-sm" href={`/${slug}`}
      ><strong>see here for more information</strong></a
    > -->
</article>
<style>
  article {
    border-bottom: 1px solid #aaa;
  }
  article:last-of-type {
    border: none;
  }
</style>
