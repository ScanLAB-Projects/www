<video
  id="player"
  class="video-js"
  loop
  preload="true"
  muted
  autoplay
  playsinline
>
  <source class="video-compressed" src="" type="video/webm" />
</video>
<style>
  h3 {
    position: absolute;
    bottom: 0;
    z-index: 10;
    color: white;
  }
  video {
    position: relative;
    object-fit: cover;
    height: 100%;
    width: 100%;
  }
</style>
<script is:inline>
  const s3Media = "http://s3.eu-west-1.amazonaws.com/media.scanlabprojects";
  const isMobileQuery = window.matchMedia("(max-width: 640px)");
  const isMobile = isMobileQuery.matches;
  const $player = document.getElementById("player");
  // const std = document.querySelector(".video-compressed");
  const feeds = ["Showreel_A", "Showreel_B", "Showreel_C"];
  const randomFeed = feeds[Math.floor(Math.random() * 3)];
  if (isMobile) {
    // $player.setAttribute("poster", "/assets/skeleton.gif");
    $player.setAttribute("src", `${s3Media}/mobile/mobile-slp.webm`);
    document.documentElement.setAttribute("mobile", true);
    window.addEventListener("mobile-video", (e) => {
      if (e?.detail)
        $player.setAttribute(
          "src",
          `${s3Media}/mobile/mobile-${e.detail}.webm`
        );
    });
  }
  if (!isMobile) {
    $player.setAttribute("src", `${s3Media}/${randomFeed}.webm`);
    $player.load();
    $player.addEventListener("canplay", (e) => {
      $player.play();
      // removeSpinner()
      // if(cache.$player.classList.contains("is-disabled")) cache.$player.classList.remove("is-disabled")
    });
    $player.volume = 0;
    window.addEventListener("hero-is-visible", (e) => {
      if (!e.detail) $player.pause();
      if (e.detail) $player.play();
    });
  }
</script>
